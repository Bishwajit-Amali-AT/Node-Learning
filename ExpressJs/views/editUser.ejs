<!DOCTYPE html>
<html>

<head>
    <title>Edit User</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f6fb;
        }

        /* NAVBAR (reuse if needed) */
        .navbar {
            background-color: #333;
            overflow: hidden;
        }

        .navbar a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-weight: bold;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        /* CARD STYLE */
        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 0 20px;
        }

        .card {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        }

        /* HEADER */
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .card-header h2 {
            margin: 0;
            color: #3f87ff;
        }

        .back-btn {
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 30px;
            background: linear-gradient(135deg, #3f87ff, #5f9cff);
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            transition: 0.3s ease;
            box-shadow: 0 8px 20px rgba(63, 135, 255, 0.35);
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(63, 135, 255, 0.55);
        }

        /* FORM */
        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        select {
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 16px;
            transition: 0.3s;
            width: 100%;
        }

        input:focus,
        select:focus {
            outline: none;
            border-color: #3f87ff;
            box-shadow: 0 0 5px rgba(63, 135, 255, 0.3);
        }

        /* SUBMIT BUTTON */
        .btn-submit {
            padding: 14px 20px;
            border: none;
            border-radius: 30px;
            background: linear-gradient(135deg, #3f87ff, #5f9cff);
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(63, 135, 255, 0.5);
        }
    </style>
</head>

<body>
    <!-- NAVBAR (AS IS) -->
    <%- include('partials/navbar') %>

        <div class="container">
            <div class="card">

                <!-- HEADER + BACK BUTTON -->
                <div class="card-header">
                    <h2>Edit User</h2>
                    <a href="/users-list" class="back-btn">‚Üê Back</a>
                </div>

                <!-- STATIC EDIT USER FORM -->
                <form action="/users/update" method="POST">
                    <div>
                         <input type="hidden" name="id" value="<%= user.id %>">
                    </div>
                    <div>
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" value="<%= user.name %>" required>
                    </div>

                    <div>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" required>
                    </div>

                    <div>
                        <label for="role">Role</label>
                        <select id="role" name="role" required>
                            <option value="Admin" selected>Admin</option>
                            <option value="User">User</option>
                            <option value="Manager">Manager</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-submit">Update User</button>
                </form>

            </div>
        </div>
</body>

</html>