<!DOCTYPE html>
<html>

<head>
    <title>Users List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f6fb;
        }

        /* NAVBAR (UNCHANGED) */
        .navbar {
            background-color: #333;
            overflow: hidden;
        }

        .navbar a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-weight: bold;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        /* HERO */
        .hero {
            background: linear-gradient(135deg, #3f87ff, #0b1023);
            color: white;
            padding: 50px 20px;
            text-align: center;
        }

        .hero h1 {
            font-size: 36px;
            margin-bottom: 8px;
        }

        .hero p {
            font-size: 16px;
            opacity: 0.9;
        }

        /* CONTENT */
        .container {
            max-width: 1100px;
            margin: 50px auto;
            padding: 0 20px;
        }

        .card {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        }

        /* HEADER ROW */
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .card-header h2 {
            margin: 0;
            color: #3f87ff;
        }

        .add-user-btn {
            text-decoration: none;
            padding: 12px 22px;
            border-radius: 30px;
            background: linear-gradient(135deg, #3f87ff, #5f9cff);
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            transition: 0.3s ease;
            box-shadow: 0 8px 20px rgba(63, 135, 255, 0.35);
        }

        .add-user-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(63, 135, 255, 0.55);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 14px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        th {
            background: #f4f6fb;
            font-size: 14px;
        }

        tr:hover {
            background: #f9fafc;
        }

        .status-active {
            color: green;
            font-weight: bold;
        }

        .status-inactive {
            color: orange;
            font-weight: bold;
        }

        .action a {
            margin-right: 10px;
            text-decoration: none;
            font-weight: bold;
            color: #3f87ff;
        }

        .action a.delete {
            color: red;
        }

        /* FOOTER */
        footer {
            background: #333;
            color: #ccc;
            text-align: center;
            padding: 15px;
            font-size: 14px;
            margin-top: 60px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <%- include('partials/navbar') %>

        <!-- HERO -->
        <section class="hero">
            <h1>Users Management</h1>
            <p>View and manage all registered users</p>
        </section>

        <!-- USERS TABLE -->
        <div class="container">
            <% if(isLoggedIn){ %>
                <tr>
                    <td colspan="5" style="text-align:center; color:green; font-weight:bold;">
                        You are logged in as Demo User
                    </td>
                </tr>
                <% } else { %>
                    <tr>
                        <td colspan="5" style="text-align:center; color:red; font-weight:bold;">
                            You are not logged in. Please <a href="/login">login</a> to manage users.
                        </td>
                    </tr>
                    <%}%>
                        <div class="card">

                            <!-- HEADER + ADD BUTTON -->
                            <div class="card-header">
                                <h2>Registered Users</h2>
                                <a href="/register" class="add-user-btn">+ Add User</a>
                            </div>

                            <table>
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user=> { %>
                                        <tr>
                                            <td>
                                                <%= user.name %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <%= user.role %>
                                            </td>
                                            <td class="status-active">Active</td>
                                            <td class="action">
                                                <a href="/users/<%= user.id %>/edit">Edit</a>
                                                <form action="/users/<%= user.id %>/delete" method="POST"
                                                    style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                                    <button type="submit" class="delete">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>

                            </table>

                        </div>
        </div>

        <!-- FOOTER -->
        <%- include('partials/footer') %>

</body>

</html>