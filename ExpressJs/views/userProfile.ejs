<style>
    /* Global styles for all alert/flash messages */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
        font-weight: bold;
        text-align: center;
        font-size: 16px;
        position: relative;
        transition: all 0.3s ease;
    }

    /* Success message */
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    /* Error message */
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* Info message (for informational or generic messages) */
    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    /* Optional: Add a close button to the alerts (x) */
    .alert .close {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 18px;
        font-weight: bold;
        color: inherit;
        cursor: pointer;
    }

    .alert .close:hover {
        color: #000;
    }
</style>

</style>

<!-- Display success messages if any -->
<% if (messages.success) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
    <% } %>

        <!-- Display error messages if any -->
        <% if (messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
