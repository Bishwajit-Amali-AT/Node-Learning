<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Transcription</title>
    <style>
        /* ===== GLOBAL STYLES ===== */
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: #f5f7fa;
            color: #333;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background-color: #1a1a1a;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .navbar a {
            color: #fff;
            padding: 16px 20px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .navbar a:hover {
            background-color: #444;
            border-radius: 8px;
        }

        /* ===== HERO ===== */
        .hero {
            background: linear-gradient(135deg, #3f87ff, #5f9cff);
            color: white;
            padding: 60px 20px;
            text-align: center;
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 12px;
        }

        .hero p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* ===== CONTAINER ===== */
        .container {
            max-width: 900px;
            margin: 50px auto;
            padding: 0 20px;
        }

        .card {
            background: #fff;
            border-radius: 20px;
            padding: 40px 30px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
        }

        .card h2 {
            margin-bottom: 20px;
            color: #333;
        }

        /* ===== FORM ===== */
        form input[type="file"] {
            margin: 20px 0;
            padding: 12px;
            font-size: 16px;
            border-radius: 10px;
            border: 1px solid #ccc;
            width: 100%;
        }

        .upload-btn {
            text-decoration: none;
            padding: 14px 28px;
            border-radius: 30px;
            background: linear-gradient(135deg, #3f87ff, #5f9cff);
            color: #fff;
            font-weight: 600;
            font-size: 16px;
            transition: 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(63, 135, 255, 0.45);
        }

        /* ===== TRANSCRIPTION RESULT ===== */
        .result {
            margin-top: 30px;
            background: #eef2f7;
            padding: 25px 20px;
            border-radius: 15px;
            text-align: left;
            word-wrap: break-word;
            box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.03);
        }

        .result h3 {
            margin-top: 0;
            color: #3f87ff;
        }

        .result p {
            margin: 0.5em 0;
        }

        .result pre {
            background: #fff;
            padding: 15px;
            border-radius: 12px;
            border: 1px solid #dfe3e8;
            overflow-x: auto;
        }

        /* ===== FOOTER ===== */
        footer {
            background: #1a1a1a;
            color: #ccc;
            text-align: center;
            padding: 20px;
            font-size: 14px;
            margin-top: 60px;
        }
    </style>
</head>

<body>
    <!-- NAVBAR -->
    <%- include('partials/navbar') %>

        <!-- HERO -->
        <section class="hero">
            <h1>Video Transcription</h1>
            <p>Upload your video and convert it into text instantly</p>
        </section>

        <!-- CONTENT -->
        <div class="container">
            <div class="card">
                <h2>Upload Video</h2>
                <form action="/transcribe" method="POST" enctype="multipart/form-data">
                    <input type="file" name="video" accept="video/mp4" required>
                    <br>
                    <!-- <button type="submit" class="upload-btn">Convert to Text</button> -->
                    <button type="submit" class="upload-btn" id="convertBtn">Convert to Text</button>
                </form>

                <!-- Transcription result -->
                <!-- Transcription result -->
                <div class="result">
                    <% if (transcription) { %>
                        <h3>Transcription Result:</h3>
                        <div
                            style="word-wrap: break-word; max-height: 400px; overflow-y: auto; padding: 10px; background: #fff; border-radius: 12px; border: 1px solid #dfe3e8;">
                            <%= transcription %>
                        </div>
                        <% } else if (error) { %>
                            <h3>Error:</h3>
                            <p style="color:red">
                                <%= error %>
                            </p>
                            <% } else { %>
                                <h3>Transcription Result:</h3>
                                <p>Converted text will be shown here</p>
                                <% } %>
                </div>

            </div>
        </div>

        <!-- FOOTER -->
        <%- include('partials/footer') %>
            <script>
                const form = document.querySelector('form');
                const button = document.getElementById('convertBtn');

                form.addEventListener('submit', () => {
                    button.disabled = true; // Disable the button
                    button.textContent = "Processing..."; // Change text
                    button.style.cursor = "not-allowed"; // Change cursor to show disabled
                });
            </script>
</body>

</html>